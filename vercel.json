{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/business-verification.js": {
      "runtime": "nodejs18.x"
    },
    "api/business-verification-status.js": {
      "runtime": "nodejs18.x"
    },
    "api/user.js": {
      "runtime": "nodejs18.x"
    },
    "api/orders.js": {
      "runtime": "nodejs18.x"
    },
    "api/call_request.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 