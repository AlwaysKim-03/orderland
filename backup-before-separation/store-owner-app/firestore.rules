rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 사용자 인증 확인 함수
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 사용자가 자신의 데이터에만 접근할 수 있는지 확인하는 함수
    function isOwner(storeId) {
      return isAuthenticated() && request.auth.uid == storeId;
    }
    
    // 사용자 문서 규칙
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // 상품(메뉴) 규칙
    match /products/{productId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 카테고리 규칙
    match /categories/{categoryId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 주문 규칙
    match /orders/{orderId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 예약 규칙
    match /reservations/{reservationId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 직원 호출 규칙
    match /staff_calls/{callId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 매출 요약 규칙
    match /sales_summary/{summaryId} {
      allow read, write: if isOwner(resource.data.storeId);
      allow create: if isAuthenticated() && request.resource.data.storeId == request.auth.uid;
    }
    
    // 테스트 컬렉션 (연결 테스트용)
    match /_test/{docId} {
      allow read, write: if isAuthenticated();
    }
  }
} 